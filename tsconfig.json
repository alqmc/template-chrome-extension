{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "package",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["@types/node"]
  },
  "include": [
    "package/**/*.ts",
    "package/**/*.tsx",
    "package/**/*.vue",
    "typings"
  ]
}
